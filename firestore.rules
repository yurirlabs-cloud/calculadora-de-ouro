rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Admins can read the entire users collection to manage them
      allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // Users can create, read, and update their own document
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
    }
  }
}
